{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "attach_protection_to_cb_v1",
  "title": "AttachProtectionToCB",
  "description": "Payload for attach_protection_to_cb (alias: add_relay) domain operation.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "snapshot_in_id": { "type": "string" },
        "idempotency_key": { "type": "string" },
        "ui": { "type": "object" },
        "timestamp_utc": { "type": "string", "format": "date-time" }
      },
      "required": ["snapshot_in_id", "idempotency_key"]
    },
    "cb_ref": {
      "type": "object",
      "properties": {
        "element_id": { "type": "string" }
      },
      "required": ["element_id"]
    },
    "protection": {
      "type": "object",
      "properties": {
        "relay_catalog_binding": { "$ref": "catalog_binding_schema.json" },
        "settings_catalog_binding": { "$ref": "catalog_binding_schema.json" },
        "ct_binding_required": { "type": "boolean" },
        "vt_binding_required": { "type": "boolean" }
      }
    }
  },
  "required": ["cb_ref", "protection"]
}
