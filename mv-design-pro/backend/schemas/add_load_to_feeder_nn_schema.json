{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "add_load_to_feeder_nn_v1",
  "title": "AddLoadToFeederNN",
  "description": "Payload for add_load_to_feeder_nn (alias: add_nn_load) domain operation.",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "snapshot_in_id": { "type": "string" },
        "idempotency_key": { "type": "string" },
        "ui": { "type": "object" },
        "timestamp_utc": { "type": "string", "format": "date-time" }
      },
      "required": ["snapshot_in_id", "idempotency_key"]
    },
    "feeder_ref": {
      "type": "object",
      "properties": {
        "element_id": { "type": "string" }
      },
      "required": ["element_id"]
    },
    "load": {
      "type": "object",
      "properties": {
        "catalog_binding": { "$ref": "catalog_binding_schema.json" },
        "scaling": {
          "type": "object",
          "properties": {
            "multiplier": { "type": "number", "minimum": 0 }
          }
        }
      }
    }
  },
  "required": ["feeder_ref", "load"]
}
