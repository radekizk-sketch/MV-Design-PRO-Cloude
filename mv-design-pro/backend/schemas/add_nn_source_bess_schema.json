{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "add_nn_source_bess_v1",
  "title": "AddNNSourceBESS",
  "description": "Payload for add_nn_source_bess (alias: add_bess_inverter_nn) domain operation.",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "snapshot_in_id": { "type": "string" },
        "idempotency_key": { "type": "string" },
        "ui": { "type": "object" },
        "timestamp_utc": { "type": "string", "format": "date-time" }
      },
      "required": ["snapshot_in_id", "idempotency_key"]
    },
    "attach_ref": {
      "type": "object",
      "properties": {
        "element_id": { "type": "string" },
        "port_id": { "type": "string" }
      },
      "required": ["element_id", "port_id"]
    },
    "bess_source": {
      "type": "object",
      "properties": {
        "catalog_binding": { "$ref": "catalog_binding_schema.json" },
        "options": {
          "type": "object",
          "properties": {
            "requires_transformer_in_path": { "type": "boolean", "default": true }
          }
        }
      }
    }
  },
  "required": ["attach_ref", "bess_source"]
}
