{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "continue_trunk_segment_sn_v1",
  "title": "ContinueTrunkSegmentSN",
  "description": "Payload for continue_trunk_segment_sn domain operation.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "snapshot_in_id": { "type": "string" },
        "idempotency_key": { "type": "string" },
        "ui": {
          "type": "object",
          "properties": {
            "click_id": { "type": "string" },
            "action_id": { "type": "string" },
            "viewport_hint": {
              "type": ["object", "null"],
              "properties": {
                "x": { "type": "number" },
                "y": { "type": "number" },
                "zoom": { "type": "number" }
              }
            }
          }
        },
        "timestamp_utc": { "type": "string", "format": "date-time" }
      },
      "required": ["snapshot_in_id", "idempotency_key"]
    },
    "trunk_ref": {
      "type": "object",
      "properties": {
        "trunk_id": { "type": "string" },
        "terminal_id": { "type": "string" }
      },
      "required": ["trunk_id", "terminal_id"]
    },
    "segment": {
      "type": "object",
      "properties": {
        "length": {
          "type": "object",
          "properties": {
            "value": { "type": "number", "exclusiveMinimum": 0 },
            "unit": { "type": "string", "const": "m" }
          },
          "required": ["value", "unit"]
        },
        "catalog_binding": { "$ref": "catalog_binding_schema.json" }
      },
      "required": ["length"]
    },
    "options": {
      "type": "object",
      "properties": {
        "create_end_terminal": { "type": "boolean", "default": true },
        "terminal_state_new": { "type": "string", "enum": ["OTWARTY", "ZAMKNIETY"] }
      }
    }
  },
  "required": ["trunk_ref", "segment"]
}
