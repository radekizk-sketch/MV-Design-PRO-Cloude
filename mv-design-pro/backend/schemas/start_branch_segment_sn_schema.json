{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "start_branch_segment_sn_v1",
  "title": "StartBranchSegmentSN",
  "description": "Payload for start_branch_segment_sn domain operation.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "snapshot_in_id": { "type": "string" },
        "idempotency_key": { "type": "string" },
        "ui": { "type": "object" },
        "timestamp_utc": { "type": "string", "format": "date-time" }
      },
      "required": ["snapshot_in_id", "idempotency_key"]
    },
    "source_ref": {
      "type": "object",
      "properties": {
        "element_id": { "type": "string" },
        "port_id": { "type": "string" }
      },
      "required": ["element_id", "port_id"]
    },
    "branch": {
      "type": "object",
      "properties": {
        "length": {
          "type": "object",
          "properties": {
            "value": { "type": "number", "exclusiveMinimum": 0 },
            "unit": { "type": "string", "const": "m" }
          },
          "required": ["value", "unit"]
        },
        "catalog_binding": { "$ref": "catalog_binding_schema.json" }
      },
      "required": ["length"]
    },
    "options": {
      "type": "object",
      "properties": {
        "create_end_terminal": { "type": "boolean", "default": true },
        "terminal_state_new": { "type": "string", "enum": ["OTWARTY", "ZAMKNIETY"] }
      }
    }
  },
  "required": ["source_ref", "branch"]
}
